{
  "name": "portfolio-v3",
  "version": "1.0.0",
  "author": "Christian Dinh",
  "description": "Web portfolio",
  "license": "ISC",
  "main": "src/index.jsx",
  "scripts": {
    "build:dev": "npm run make-dist && ( npm run copy & npm run build:css & webpack --env=dev --progress --profile --colors )",
    "watch:dev": "npm run make-dist && ( npm run watch:copy & npm run watch:css & webpack --env=dev --progress --profile --colors --watch )",
    "build:prod": "npm run make-dist && ( npm run copy & npm run build:css & webpack --env=prod -p )",
    "build:css": "lessc --strict-math=on src/main.less dist/bundle.css",
    "watch:css": "nodemon --ext less --ignore node_modules/ --ignore dist/ --exec \"npm run build:css\"",
    "copy": "cp -r static dist/static && cp index.html dist/",
    "watch:copy": "nodemon --ignore node_modules/ --ignore dist/ --exec \"npm run copy\"",
    "clean": "rm -rf dist",
    "make-dist": "npm run clean && mkdir -p dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naughtyfiddle/portfolio-v3.git"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "~6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.3",
    "less": "^2.7.2",
    "nodemon": "^1.11.0",
    "webpack": "^2.5.1",
    "webpack-bundle-analyzer": "~2.3.1",
    "webpack-merge": "~4.1.0"
  }
}
